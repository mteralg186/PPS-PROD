<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Navbar Responsive</title>
    <style>
        /* Estilos generales */
        body {
            background-color: #ffffff;
            color: #333;
            margin: 0;
            font-family: Arial, sans-serif;
        }


       /* Estilos para el modo oscuro */
    .dark-mode {
        background-color: #222;
        color: white;
    }




    .dark-mode .navbar {
        background: linear-gradient(135deg, #555, #333);
    }




    .dark-mode .nav-link {
        color: black !important;
    }




    .dark-mode .nav-link:hover {
        background: #fcdb3a;
        color: white;
    }




    .dark-mode .search-container {
        background: linear-gradient(135deg, #ffefb5, #fcdb3a);
        border: 1px solid #fcdb3a;
    }




    .dark-mode .search-input {
        color: white;
    }




    .dark-mode .search-results {
        background-color: #333;
        border: 1px solid #fcdb3a;
    }




    .dark-mode .result-item {
        background-color: #444;
        color: white;
    }




    .dark-mode .result-item:hover {
        background-color: #fcdb3a;
        color: black;
    }




        /* Navbar */
        .navbar {
            background: linear-gradient(135deg, #ffefb5, #fcdb3a);
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 10px 20px;
            flex-wrap: wrap;
        }


        .navbar-brand img {
            height: 3rem;
        }


        .navbar-content {
            display: flex;
            align-items: center;
            gap: 10px;
        }


        .search-container {
            display: flex;
            align-items: center;
            background: white;
            padding: 8px;
            border-radius: 20px;
            border: 1px solid #fcdb3a;
            height: 36px;
            position: relative;
        }


        .search-input {
            border: none;
            outline: none;
            padding: 5px;
            font-size: 1em;
            width: 350px;
            background: transparent;
            color: black;
        }


        .search-input::placeholder {
            color: rgba(0, 0, 0, 0.7);
        }


        .search-button {
            background-color: transparent;
            border: none;
            cursor: pointer;
            font-size: 1em;
            color: black;
        }


        .search-button:hover {
            color: #fcdb3a;
        }


        .search-results {
            position: absolute;
            top: 100%;
            left: 0;
            width: 100%;
            background-color: white;
            border-radius: 10px;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            max-height: 0;
            overflow-y: hidden;
            opacity: 0;
            transform: translateY(-10px);
            transition: opacity 0.3s ease, transform 0.3s ease, max-height 0.3s ease;
            border: 1px solid #fcdb3a;
            z-index: 999;
        }


        .search-results.open {
            max-height: 300px;
            opacity: 1;
            transform: translateY(0);
            overflow-y: auto;
        }


        .result-item {
            padding: 10px;
            display: flex;
            align-items: center;
            cursor: pointer;
            border-bottom: 1px solid #ddd;
            transition: background-color 0.2s;
            background-color: #f0f8ff;
        }


        .result-item:hover {
            background-color: #d4edff;
        }


        .nav-link {
            background: white;
            border-radius: 12px;
            padding: 6px 12px;
            text-decoration: none;
            font-weight: bold;
            color: black;
            border: 1px solid #fcdb3a;
        }


        .nav-link:hover {
            background: #fcdb3a;
            color: white;
        }


        #theme-toggle {
            background: white;
            border: 1px solid #fcdb3a;
            color: black;
            font-weight: bold;
            padding: 6px 12px;
            border-radius: 12px;
            cursor: pointer;
        }


        #theme-toggle:hover {
            background: #fcdb3a;
            color: white;
        }


        #menu-toggle {
            display: none;
        }


        @media (max-width: 768px) {
            .navbar {
                flex-direction: column;
                align-items: flex-start;
                padding: 10px;
            }


            #menu-toggle {
                display: block;
                background: white;
                border: 1px solid #fcdb3a;
                padding: 8px 12px;
                border-radius: 12px;
                cursor: pointer;
                font-weight: bold;
                margin-top: 10px;
            }


            #menu-toggle:hover {
                background: #fcdb3a;
                color: white;
            }


            .navbar-content {
                display: none;
                flex-direction: column;
                width: 100%;
                align-items: flex-start;
                gap: 5px;
                padding-top: 10px;
                opacity: 0;
                transform: translateY(-10px);
                transition: opacity 0.3s ease, transform 0.3s ease;
            }


            .navbar-content.show {
                display: flex;
                opacity: 1;
                transform: translateY(0);
            }


            .search-container {
                width: 100%;
            }


            .search-input {
                width: 100%;
            }


            .nav-link {
                width: 100%;
                text-align: center;
                padding: 10px;
            }
        }
    </style>
</head>
<body>


<nav class="navbar">
    <a class="navbar-brand" href="/dashboard">
        <img src="/assets/images/logo4.png" alt="Logo">
    </a>


    <button id="menu-toggle">‚ò∞</button>


    <div class="navbar-content">
        <div class="search-container">
            <input type="text" class="search-input" id="searchInput" placeholder="Buscar usuarios..." aria-label="Buscar">
            <button class="search-button">üîç</button>
            <div class="search-results" id="results"></div>
        </div>


        <a class="nav-link" href="/perfil">Perfil</a>
        <a class="nav-link" href="/publicaciones">Publicaciones</a>
        <a class="nav-link" href="/comentarios">Comentarios</a>
        <button id="theme-toggle">üåô</button>
        <a class="nav-link" href="/logout">Logout</a>
    </div>
</nav>


<script>
    document.addEventListener("DOMContentLoaded", () => {
        const toggleButton = document.getElementById("theme-toggle");
        const body = document.body;



        if (localStorage.getItem("theme") === "dark") {
            body.classList.add("dark-mode");
            toggleButton.textContent = "‚òÄÔ∏è"; 
        } else {
            toggleButton.textContent = "üåô";  
        }


       
        toggleButton.addEventListener("click", function () {
            body.classList.toggle("dark-mode");


            if (body.classList.contains("dark-mode")) {
                localStorage.setItem("theme", "dark");
                toggleButton.textContent = "‚òÄÔ∏è";  
            } else {
                localStorage.setItem("theme", "light");
                toggleButton.textContent = "üåô";  
            }
        });


        const menuToggle = document.getElementById("menu-toggle");
        const navbarContent = document.querySelector(".navbar-content");


        menuToggle.addEventListener("click", () => {
            navbarContent.classList.toggle("show");
        });


        const searchInput = document.getElementById("searchInput");
        const resultsContainer = document.getElementById("results");


        searchInput.addEventListener("input", async () => {
            const query = searchInput.value.trim();
            resultsContainer.innerHTML = "";
            resultsContainer.classList.remove("open");


            if (query === "") return;


            try {
                const response = await fetch(`/buscar?q=${query}`);
                const users = await response.json();


                users.forEach(user => {
                    const userElement = document.createElement("div");
                    userElement.classList.add("result-item");
                    userElement.textContent = `${user.nombre} ${user.apellido} (@${user.username})`;
                    userElement.onclick = () => window.location.href = `/perfilajeno/${user.username}`;
                    resultsContainer.appendChild(userElement);
                });


                resultsContainer.classList.add("open");
            } catch (error) {
                console.error("Error al buscar usuarios:", error);
            }
        });
    });
</script>


</body>
</html>



