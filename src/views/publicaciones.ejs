    <!-- Script para manejar la creaci√≥n y eliminaci√≥n de publicaciones -->
    <script>
document.addEventListener("DOMContentLoaded", function() {
    document.getElementById("crear-publicacion-form").addEventListener("submit", async function(event) {
        event.preventDefault();




        const formData = new FormData();
        formData.append("contenido", document.getElementById("contenido").value);




        const imagenes = document.getElementById("imagenespubli").files;
        for (let img of imagenes) {
            formData.append("imagenes", img); //Enviamos archivos como `multipart/form-data`
        }




        try {
            const response = await fetch("/publicaciones", {
                method: "POST",
                body: formData //Enviamos `FormData`, no JSON
            });




            const result = await response.json();
            if (response.ok) {
                location.reload();
            } else {
                console.error("Error al crear publicaci√≥n", result.error);
            }
        } catch (error) {
            console.error("Error en la solicitud:", error);
        }
    });




    // Validar y mostrar la cantidad de im√°genes seleccionadas
    document.getElementById("imagenespubli").addEventListener("change", function() {
        const contador = document.getElementById("contador-imagenes");
        contador.textContent = `${this.files.length}/4 im√°genes seleccionadas`;




        if (this.files.length > 4) {
            alert("Solo puedes subir hasta 4 im√°genes.");
            this.value = ""; // Reseteamos el input si se pasan de 4 im√°genes
            contador.textContent = "0/4 im√°genes seleccionadas";
        }
    });
});




    </script>
      <script>
